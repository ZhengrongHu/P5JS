//Rectangles changing color and move
var offset = 0;

function setup() {
  createCanvas(800,800);
}

function draw() {
  background(255);
  strokeWeight(6);
  stroke(0);
  
  for (var x = 0; x <= mouseX; x += 30){
    for (var y = 0; y <= mouseY; y += 30){
    fill (random(255), random(150), random(255));
    rect(x, y, 25, 25);
    
  }
}
}
